<div class="nav-bar">
  <ul>
    <% if user_signed_in? %>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <% unless current_page?(new_user_registration_path)%>
        <li><%= link_to "Create Account", new_user_registration_path%></li>
    <%end %>
      <% unless current_page?(new_user_session_path)%>
        <li><%= link_to "Sign In", new_user_session_path%></li>
      <% end %>
    <% end %>
    <% if current_user %>
      <% unless current_page?(user_path(current_user)) %>
        <li><%= link_to "My Stuff", user_path(current_user) %></li>
      <% end %>
    <% end %>
  </ul>
  <div class="flash-message">
    <% if flash.notice %>
      <div class="flash-notice">
        <%= flash.notice %>
      </div>
    <% elsif flash.alert %>
      <div class="flash-alert">
        <%= flash.alert %>
      </div>
    <% end %>
  </div>

</div>
